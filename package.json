{
  "name": "cypress-ui-api-demo",
  "version": "1.0.0",
  "description": "Just a demo for fun and giggles with CypressIO doing some awesome UI and API testing",
  "main": "index.js",
  "scripts": {
    "start:ci": "serve --no-clipboard --listen ${PORT:-8080}",
    "test:api": "npx cypress run --spec 'tests/API/*.spec.js'",
    "test:ui:chrome": "npx cypress run --spec 'tests/UI/*.spec.js' --browser chrome",
    "test:ui:firefox": "npx cypress run --spec 'tests/UI/*.spec.js' --browser firefox"
  },
  "author": "AlanZinho",
  "license": "ISC",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "serve": "^13.0.2"
  },
  "devDependencies": {
    "cypress": "^9.1.0"
  }
}
